<div class="container">
  <header>
    <h1>welcome, <%= @user.username %>!</h1>
  </header>

  <form action="/user" method="post">
    <%# if @tweet %>
    <textarea class="tweet-box" rows="4" cols="50" name="content" placeholder="What are you thinking?"></textarea>
    <%# raise error messages %>
    <%# end %>
    <input type="submit" value="tweet"/>
  </form>
</div>

<% @tweets.each do |tweet| %>

  <div class="container"
    <%= erb :_tweet, locals: { tweet: tweet }, layout: false %>

    <%= erb :_delete_button, locals: { tweet: tweet }, layout: false %>
  </div>
<% end %>


